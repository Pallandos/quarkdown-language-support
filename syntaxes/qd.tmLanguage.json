{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quarkdown",
	"patterns": [
		{"include": "#headers"},
		{"include": "#bold"},
		{"include": "#italic"},
		{"include": "#code"},
		{"include": "#link"},
		{"include": "#function"},
		{"include": "#quote"},
		{"include": "#comment"},
		{"include": "#maths"},
		{"include": "#list"}
	],
	"repository": {
		"headers": {
			"patterns": [
				{
					"name": "markup.heading.qd",
					"match": "^(\\s)*(#{1,6})\\s.*$"
				}
			]
		},
		"bold": {
			"patterns": [
				{
					"name": "markup.bold.qd",
					"match": "\\*\\*(.*?)\\*\\*"
				}
			]
		},
		"italic": {
			"patterns": [
				{
					"name": "markup.italic.qd",
					"match": "\\*(.*?)\\*"
				}
			]
		},
		"code": {
			"patterns": [
				{
					"name": "markup.inline.code.qd",
					"match": "`([^`]+)`"
				}
			]
		},
		"link": {
			"patterns": [
				{
					"name": "markup.underline.link.qd",
					"match": "\\[(.*?)\\]\\((.*?)\\)"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.block.qd",
					"begin": "<!--",
					"end": "-->"
				}
			]
		},
		"list": {
			"patterns": [
				{
					"name": "markup.list.unnumbered.qd",
					"match": "^(\\s*)([-*])\\s.*$",
					"captures": {
						"2": {
							"name": "punctuation.definition.list.begin.markdown.qd"
						}
					}
				},
				{
					"name": "markup.numbered.list.qd",
					"match": "^(\\s*)(\\d+)\\.\\s.*$",
					"captures": {
						"2": {
							"name": "punctuation.definition.list.begin.markdown.qd"
						}
					}
				}
			]
		},
		"quote": {
			"patterns": [{
				"name": "markup.quote.qd",
				"match": ">\\s*(.*)"
			}]
		},
		"maths": {
			"patterns": [
				{
					"name": "markup.math.inline.qd",
					"match": "\\B\\$\\s.*\\s\\$\\B"
				},
				{
					"name": "markup.math.block.qd",
					"begin": "^(\\$){3}\\s*$",
					"end": "^(\\$){3}\\s*$",
					"patterns": [
						{
							"name": "markup.math.content.qd",
							"match": "^(?!\\$\\$\\$\\s*$).+"
						}
					]
				}
			]
		},
		"function": {
			"patterns": [
				{
					"name": "meta.function.qd",
					"begin": "\\B\\.[a-zA-Z]+\\s",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.qd"
						}
					},
					"end": "$",
					"patterns": [
						{
							"name": "meta.function.parameters.qd",
							"match": "([a-zA-Z]+:)?\\{.*?\\}"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.qd"
}